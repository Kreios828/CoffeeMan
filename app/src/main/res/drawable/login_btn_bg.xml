<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape>
            <stroke android:width="1dp" android:color="@color/braindark" />
            <corners android:radius="3dp" />
            <solid android:color="@color/brainlight" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <stroke android:width="1dp" android:color="@color/brainlight" />
            <corners android:radius="3dp" />
            <solid android:color="@color/braindark" />
        </shape>
    </item>
</selector>